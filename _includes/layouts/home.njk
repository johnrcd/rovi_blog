---
layout: layouts/_base.njk
navigationOptions:
  listElement: "ul"
  listItemElement: "li"
  listClass: ""
  listItemClass: ""
  listItemHasChildrenClass: ""
  activeListItemClass: ""
  anchorClass: ""
  activeAnchorClass: ""
  activeKey: eleventyNavigation.key
  showExcerpt: false
---

{% set blogpath = metadata.blog_path %}
{% if metadata.blog_path == "" %}
	{% set blogpath = "/" %}
{% endif %}

{% set links = [
	["home", "/"],
	["blog", "/posts/"],
	["about", "/about/"],
	["contact", "/contact/"],
	["themes", "/themes/"]
] %}

{# no trailing commas for lists in nunjucks #}

<header class="header">
	<div class="header__siteTitle">{{ metadata.title }}</div>
	{# https://www.11ty.dev/docs/collections/#use-an-aria-current-attribute-on-the-current-page #}
	{# https://www.11ty.dev/docs/plugins/navigation/ #}
	<nav class="header__nav">
		{% set navPages = collections.all | eleventyNavigation %}
		<ul class="header__ul">
			{%- for entry in navPages %}
				<li class="header__li">
					<a
						class="header__a"
						href="{{ entry.url }}"
						{% if entry.url == page.url %}
							aria-current="page"
						{% endif %}
					>
						{{ entry.title }}
					</a>
				</li>
			{%- endfor %}
		</ul>
	</nav>
</header>

{{ content | safe }}
