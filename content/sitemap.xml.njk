permalink: /sitemap.xml
layout: false
eleventyExcludeFromCollections: true
---
{# Sitemaps are a system to allow search engines to index your website more #}
{# efficiently. The data is stored within the /sitemap.xml file.            #}

{# This file simply looks through every page in your website and adds it to #}
{# the sitemap.                                                             #}

<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
{%- for page in collections.all %}
	{% set absoluteUrl %}{{ page.url | htmlBaseUrl(metadata.url) }}{% endset %}
	<url>
		<loc>{{ absoluteUrl }}</loc>
		<lastmod>{{ page.date | htmlDateString }}</lastmod>
	</url>
{%- endfor %}
</urlset>
